    <Style x:Key="EmailTip" TargetType="TextBox">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TextBox">
                    <Grid>
                        <Border Background="#FFFFFF" BorderBrush="#FF7D8683" BorderThickness="1"/>
